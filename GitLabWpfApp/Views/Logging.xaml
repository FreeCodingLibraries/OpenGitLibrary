<UserControl x:Class="GitLabWpfApp.Views.Logging"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800" Background="LightSalmon">

    <Grid>
        <Label Content="Logging" Margin="0,0,10,0"
               VerticalAlignment="Top" HorizontalAlignment="Left"
               FontWeight="Bold" />
        <StackPanel Orientation="Horizontal" Margin="0,30,10,0"
                    VerticalAlignment="Top" HorizontalAlignment="Left">
            <Button Content="Dev" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center"
                />
            <Button Visibility="Collapsed" Content="UAT" HorizontalAlignment="Left" Margin="10,0,0,0"
                    VerticalAlignment="Center" />
            <Button Visibility="Collapsed" Content="PROD" HorizontalAlignment="Left" Margin="10,0,0,0"
                    VerticalAlignment="Center" />
        </StackPanel>
    </Grid>
</UserControl>